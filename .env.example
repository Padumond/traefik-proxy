# Traefik Environment Configuration
# Copy this file to .env and update with your values
# Command: cp .env.example .env

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# Timezone for consistent log timestamps
TZ=UTC

# Traefik Dashboard Configuration
# Domain for accessing Traefik dashboard
DASHBOARD_HOST=traefik.yourdomain.com

# Dashboard credentials (generate with: htpasswd -nb admin your-password)
# IMPORTANT: Double all $ signs when pasting here ($ becomes $$)
# Example: admin:$apr1$xyz$hash becomes admin:$$apr1$$xyz$$hash
DASHBOARD_CREDENTIALS=admin:$$apr1$$placeholder$$changeme

# Let's Encrypt email for SSL certificate notifications
ACME_EMAIL=admin@yourdomain.com

# ===========================================
# MONITORING (Optional)
# ===========================================

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password

# ===========================================
# PORTAINER (Optional)
# ===========================================

# Portainer domain
PORTAINER_HOST=portainer.yourdomain.com

