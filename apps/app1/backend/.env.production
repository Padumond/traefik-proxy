# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/mas3ndi?schema=public"

# Redis Configuration
REDIS_URL="redis://redis:6379"

# JWT Authentication - CHANGE THESE IN PRODUCTION
JWT_SECRET="CHANGE-THIS-TO-A-SECURE-256-BIT-SECRET-IN-PRODUCTION"
JWT_REFRESH_SECRET="CHANGE-THIS-TO-A-SECURE-256-BIT-REFRESH-SECRET-IN-PRODUCTION"
