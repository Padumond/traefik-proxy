# Test Environment Configuration
NODE_ENV=test

# Database
DATABASE_URL="postgresql://test:test@localhost:5432/mas3ndi_test"

# JWT
JWT_SECRET="test-jwt-secret-key-for-testing-only"

# Arkessel API (Test Configuration)
ARKESSEL_API_KEY="test-api-key"
ARKESSEL_SENDER_ID="TestSender"

# Test Phone Number (Set this to your actual phone number for manual testing)
TEST_PHONE_NUMBER="+1234567890"

# Email Configuration (Test)
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="test"
SMTP_PASS="test"
FROM_EMAIL="test@mas3ndi.com"

# Redis (Test)
REDIS_URL="redis://localhost:6379/1"

# File Upload
UPLOAD_DIR="./uploads/test"
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="error"

# Webhook
WEBHOOK_SECRET="test-webhook-secret"

# Frontend URL
FRONTEND_URL="http://localhost:3001"

# API Configuration
API_VERSION="v1"
API_PREFIX="/api"

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET="test-session-secret"

# Feature Flags
ENABLE_RATE_LIMITING=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SMS_VERIFICATION=false

# Test-specific configurations
MOCK_EXTERNAL_APIS=true
SKIP_EMAIL_SENDING=true
SKIP_SMS_SENDING=false
