# Database configuration
DATABASE_URL="postgresql://username:password@localhost:5432/mas3ndi?schema=public"

# JWT Authentication - Use strong, random secrets in production
JWT_SECRET="your-super-secure-jwt-secret-key-minimum-256-bits-long"
JWT_REFRESH_SECRET="your-super-secure-refresh-token-secret-key-minimum-256-bits-long"
JWT_EXPIRES_IN="1d"
JWT_REFRESH_EXPIRES_IN="7d"

# API Configuration
PORT=3000
NODE_ENV="development"

# Arkessel SMS Gateway Configuration
ARKESSEL_API_KEY="your-arkessel-api-key"
ARKESSEL_API_URL="https://arkessel-api-endpoint.com"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"
